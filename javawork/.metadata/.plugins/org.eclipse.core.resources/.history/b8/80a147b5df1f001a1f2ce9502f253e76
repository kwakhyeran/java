package workbook77p;

import workbook74p.Rectangle;
import workbook74p.Shape;
import workbook74p.Triangle;

public class CarTest {

	public static void main(String[] args) {

		Car[] ca = new Car[2];

		ca[0] = new L3("L3", "1500", 50, 25, 0);
		ca[1] = new L5("L5", "2000", 70, 35, 0);

		System.out.println("vehicleName" + "\t" + "engineSize" + "\t" + "oilTack" + "\t" + "oilSize" + "\t" + "distace"
				+ "\t" + "temperature");

		String name = "";
		for (int i = 0; i < ca.length; i++) {

			if (ca[i] instanceof L3) {
				name = "L3";
				System.out.println(name + "\t" + ca[i].getEngine() + "\t" + ca[i].getOilTank() + "\t"
						+ ca[i].getOilSize() + "\t" + ca[i].getDistace() + ((L3) ca[i]).getTempGage());
			} else {
				name = "L5";

				System.out.println(name + "\t" + ca[i].getEngine() + "\t" + ca[i].getOilTank() + "\t"
						+ ca[i].getOilSize() + "\t" + ca[i].getDistace() + ((L5) ca[i]).getTempGage());
			}

			for (Car obj : ca) {
				// System.out.println(obj.getColors()); // obj = shape[i]
				// 객체의 타입을 변경하는 경우 무조건 변경하는 것이 아니라
				// 객체의 타입을 체크한 후에 변경한다.
				String name1 = "";
				if (obj instanceof L3) {
					((L3) obj).setOilSize(25); // obj를 Rectangle로 변환하고..
					System.out.println(name1 + "\t" + obj.getEngine() + "\t" + obj.getOilTank() + "\t" + obj.getOilSize()
					+ "\t" + obj.getDistace() +"\t" + ((L3)obj).getTempGage());
				} else if (obj instanceof L5) {
					((L5) obj).setOilSize(25); // obj를 Rectangle로 변환하고..
				}
				System.out.println(name1 + "\t" + obj.getEngine() + "\t" + obj.getOilTank() + "\t" + obj.getOilSize()
						+ "\t" + obj.getDistace() +"\t" + ((L5)obj).getTempGage());

			}
		}
	}
}
